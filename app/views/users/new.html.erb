<%= form_for @user, html: { multipart: true } do |f| %>
  <p>
    <label>My Avatar</label>
    <%= f.file_field :avatars, multiple: true %>
  </p>

  <p>
    <label>First Name</label>
    <%= f.text_field :first_name %>
  </p>

  <p>
    <label>First Name</label>
    <%= f.text_field :last_name %>
  </p>

  <%= f.submit %>
<% end %>
